{
   "name": "youget",
   "author": "Lucas Melo <luckasmelo.dev@gmail.com>",
   "main": "electron/electron.js",
   "private": true,
   "version": "0.0.0",
   "type": "module",
   "scripts": {
      "dev": "vite",
      "build": "vue-tsc && vite build",
      "preview": "vite preview",
      "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
      "electron:pack": "electron-builder --dir",
      "electron:dev": "concurrently -k \"cross-env BROWSER=none npx dev\" \"npx electron\"",
      "electron:builder": "electron-builder",
      "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
      "app:build": "npx build:for:electron && npx electron:builder"
   },
   "dependencies": {
      "vue": "^3.2.45",
      "vuetify": "^3.0.1"
   },
   "devDependencies": {
      "@vitejs/plugin-vue": "^4.0.0",
      "concurrently": "^7.6.0",
      "cross-env": "^7.0.3",
      "electron": "^22.1.0",
      "electron-builder": "^23.6.0",
      "typescript": "^4.9.3",
      "vite": "^4.0.0",
      "vue-tsc": "^1.0.11",
      "wait-on": "^7.0.1"
   },
   "build": {
      "appId": "com.luckas.youget",
      "productName": "YouGet",
      "copyright": "Copyright Â© 2023 ${author}",
      "mac": {
         "category": "public.app-category.utilities"
      },
      "nsis": {
         "oneClick": false,
         "allowToChangeInstallationDirectory": true
      },
      "files": [
         "dist/**/*",
         "electron/**/*"
      ],
      "directories": {
         "buildResources": "assets",
         "output": "dist_electron"
      }
   }
}
